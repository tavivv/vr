<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://aframe.io/releases/1.3.0/aframe.min.js"></script>
    <script src="https://unpkg.com/aframe-event-set-component@3.0.3/dist/aframe-event-set-component.min.js"></script>
</head>
<body>
    <a-scene id="scene">
        <a-assets>
            <a-asset-item id="stone" src="stone01.gltf"></a-asset-item>
        </a-assets>

        <a-camera>
          <a-cursor></a-cursor>
        </a-camera>

        <a-entity gltf-model="#stone" position="1 1 1"></a-entity>

        <a-sky id="sky" color="#00008B"></a-sky>

        <a-plane rotation="-90 0 0" width="500" height="500" color="green"></a-plane>
        
        <a-entity camera look-controls position="0 1.6 0"></a-entity>
    
        <a-box position="4 1 -5" color="white" id="element" collectible></a-box>
        <a-sphere position="2 1 -5" radius="1" color="white" id="element" collectible></a-sphere>
        <a-cylinder position="0 1 -5" radius="0.5" height="1.5" color="white" id="element"></a-cylinder>
        <a-cylinder position="-2 1 -5" radius="0.5" height="1.5" color="white" id="element"></a-cylinder>
    
        <a-text value="Score: 0" position="-1.5 2.5 -5" color="black" id="score"></a-text>
    
        <a-text id="timer" value="Time: 60" position="1.5 2.5 -5" color="black"></a-text>
    </a-scene>

    <script>
    const interactableObjects = document.querySelectorAll('#element');

    interactableObjects.forEach(object => {
    object.addEventListener('click', function () {

    const scoreelement = document.querySelector('#score')
    const score = parseInt(scoreelement.getAttribute('text').value.split(': ')[1] + 1)
    scoreelement.setAttribute('text', {value: 'Score: ' + score })

    this.parentNode.removeChild(this);
    });
    });

    function endGame() {
        let finalScore = parseInt(document.querySelector('[text__value="Score: "]').getAttribute('text').value.split(': ')[1]); 
        alert('Game Over! Your final score is: ' + finalScore);
        location.reload();}

        let timeLeft = 60;
        let timerElement = document.querySelector('#timer')

        function updateTimer(){
            if (timeLeft > 0){
                timeLeft--;
                timerElement.setAttribute('text', {value: 'Time: ' + timeLeft})
            } else {
                endGame();
            }
        }

        setInterval(updateTimer, 1000)
        
    </script>
</body>
</html>
